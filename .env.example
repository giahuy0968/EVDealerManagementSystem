# EVDMS Environment Configuration
# Copy this file to .env.local and update the values

# Application
NODE_ENV=development
APP_NAME=EVDMS
APP_VERSION=1.0.0

# Database Configuration
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=evdms
POSTGRES_USER=evdms_user
POSTGRES_PASSWORD=evdms_password

# MongoDB
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=evdms
MONGO_USER=evdms_user
MONGO_PASSWORD=evdms_password
MONGO_URL=mongodb://evdms_user:evdms_password@localhost:27017/evdms

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=evdms_user
RABBITMQ_PASSWORD=evdms_password
RABBITMQ_URL=amqp://evdms_user:evdms_password@localhost:5672

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Service URLs (for development)
AUTH_SERVICE_URL=http://localhost:3001
DEALER_SERVICE_URL=http://localhost:3002
CUSTOMER_SERVICE_URL=http://localhost:3003
MANUFACTURER_SERVICE_URL=http://localhost:3004
REPORT_SERVICE_URL=http://localhost:3005
NOTIFICATION_SERVICE_URL=http://localhost:3006
API_GATEWAY_URL=http://localhost:3000

# Frontend URLs
DEALER_DASHBOARD_URL=http://localhost:3010
MANUFACTURER_DASHBOARD_URL=http://localhost:3011
ADMIN_PANEL_URL=http://localhost:3012

# API Configuration
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX=100
API_TIMEOUT=30000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/csv

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# AI/ML Configuration (for future use)
AI_SERVICE_URL=http://localhost:8000
AI_MODEL_PATH=./models
ENABLE_AI_FEATURES=false

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this-in-production
CORS_ORIGIN=http://localhost:3000,http://localhost:3010,http://localhost:3011,http://localhost:3012

# Development Tools
SWAGGER_ENABLED=true
DEBUG_MODE=true
ENABLE_METRICS=true