# EVDMS Environment Configuration
# Copy .env.example and customize for your environment

# =============================================
# Database Profile Selection
# =============================================
# Options: 'docker' (local PostgreSQL) or 'supabase' (cloud)
AUTH_PROFILE=docker
CUSTOMER_PROFILE=docker

# =============================================
# Supabase Configuration (Port 6543 = Pooler)
# =============================================
SUPABASE_HOST=db.grgbbhzjlddgocgyhekd.supabase.co
SUPABASE_PORT=6543
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=Abc@123456!

# =============================================
# Local PostgreSQL (Docker)
# =============================================
LOCAL_POSTGRES_HOST=postgres
LOCAL_POSTGRES_PORT=5432
LOCAL_POSTGRES_DB=evdms
LOCAL_POSTGRES_USER=evdms_user
LOCAL_POSTGRES_PASSWORD=evdms_password

# =============================================
# JWT Configuration
# =============================================
JWT_SECRET=evdms-jwt-secret-key-2024-minimum-256-bits-required-change-in-production
JWT_ACCESS_TOKEN_EXPIRY=900000
JWT_REFRESH_TOKEN_EXPIRY=604800000

# =============================================
# Service Ports
# =============================================
AUTH_SERVICE_PORT=3001
CUSTOMER_SERVICE_PORT=3003
DEALER_SERVICE_PORT=3002
MANUFACTURER_SERVICE_PORT=3004
REPORT_SERVICE_PORT=3005
NOTIFICATION_SERVICE_PORT=3006
API_GATEWAY_PORT=3000

# =============================================
# Redis
# =============================================
REDIS_HOST=redis
REDIS_PORT=6379

# =============================================
# RabbitMQ
# =============================================
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_USER=evdms_user
RABBITMQ_PASSWORD=evdms_password

# =============================================
# Email (Notification Service)
# =============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# =============================================
# Application
# =============================================
NODE_ENV=development
APP_NAME=EVDMS
APP_VERSION=1.0.0
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_EVDMS=DEBUG

# =============================================
# CORS
# =============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3010,http://localhost:3011,http://localhost:3012
