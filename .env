# Database Configuration
POSTGRES_DB=evdealerdb
POSTGRES_USER=evuser
POSTGRES_PASSWORD=evpassword

# Redis Configuration
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=mySecretKey123456789012345678901234567890
JWT_EXPIRATION=86400000

# Email Configuration (for notification service)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS_ENABLED=true
SMTP_SSL_ENABLED=false

# Service URLs (internal communication)
AUTH_SERVICE_URL=http://auth-service:8080
CUSTOMER_SERVICE_URL=http://customer-service:8080
DEALER_SERVICE_URL=http://dealer-service:8080
MANUFACTURER_SERVICE_URL=http://manufacturer-service:8080
NOTIFICATION_SERVICE_URL=http://notification-service:8080
REPORT_ANALYTICS_SERVICE_URL=http://report-analytics-service:8080

# API Gateway Configuration
API_GATEWAY_URL=http://api-gateway:8080

# Logging Configuration
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_EXAMPLE=DEBUG

# Spring Boot Actuator
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,prometheus,metrics