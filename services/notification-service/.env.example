# Notification Service Environment Variables

# Server Configuration
PORT=3006
HOST=0.0.0.0
NODE_ENV=development

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=evdms
DB_USER=evdms_user
DB_PASSWORD=evdms_password
DB_SSL=false
DB_MAX_CONNECTIONS=20

# Redis
REDIS_URL=redis://localhost:6379
REDIS_KEY_PREFIX=evdms:notification:
REDIS_TTL=3600

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_EXCHANGE=evdms.events

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@evdms.com
UNSUBSCRIBE_BASE_URL=http://localhost:3000/api/v1/notifications/unsubscribe

# SMS Configuration (Twilio)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM=+1234567890
SMS_RATE_LIMIT_PER_HOUR=100

# Alternative SMS Provider (ESMS - Vietnam)
# SMS_PROVIDER=esms
# ESMS_API_KEY=your-esms-api-key
# ESMS_SECRET_KEY=your-esms-secret-key
# ESMS_BRAND_NAME=EVDMS

# Push Notifications (Firebase Cloud Messaging)
FCM_SERVER_KEY=your-fcm-server-key

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:5174,http://localhost:5175

# Logging
LOG_LEVEL=info
LOG_FILE=logs/notification-service.log

# Swagger Documentation
SWAGGER_ENABLED=true

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_BACKOFF_MULTIPLIER=2
RETRY_INITIAL_DELAY=1000
