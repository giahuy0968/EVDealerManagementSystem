{
  "name": "@evdms/notification-service",
  "version": "1.0.0",
  "description": "EVDMS Notification Service - Email, SMS, Push notifications with templates and preferences",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "amqplib": "^0.10.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "evdms": "file:../..",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "joi": "^17.10.0",
    "nodemailer": "^6.9.12",
    "pg": "^8.11.3",
    "redis": "^4.6.8",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/express": "^4.17.17",
    "@types/node": "^20.8.0",
    "@types/nodemailer": "^7.0.2",
    "@types/uuid": "^9.0.4",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "author": "EVDMS Team",
