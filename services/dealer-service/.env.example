# Dealer Service Configuration

# Server
PORT=3002
NODE_ENV=development

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=evdms
DB_USER=evdms_user
DB_PASSWORD=evdms_password
DB_LOGGING=true

# Redis
REDIS_URL=redis://localhost:6379

# RabbitMQ
RABBITMQ_URL=amqp://evdms_user:evdms_password@localhost:5672

# Service URLs (for inter-service communication)
AUTH_SERVICE_URL=http://localhost:3001
CUSTOMER_SERVICE_URL=http://localhost:3003
MANUFACTURER_SERVICE_URL=http://localhost:3004

# JWT (for token verification)
JWT_SECRET=evdms-jwt-secret-key-2024-change-in-production

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:5174,http://localhost:5175,http://localhost:5176

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
