{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["shared/*"],
      "@gateway/*": ["gateway/src/*"],
      "@auth/*": ["services/auth-service/src/*"],
      "@types/*": ["shared/types/*"]
    }
  },
  "include": [
    "shared/**/*",
    "gateway/src/**/*",
    "services/*/src/**/*",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "frontend/**/*",
    "database/**/*",
    "docs/**/*"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}